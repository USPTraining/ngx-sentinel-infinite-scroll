{
  "name": "nginfinite-scroll",
  "version": "1.0.0",
  "description": "Angular (2 and beyond) Infinite Scroll.",
  "main": "nginfinite-scroll.bundle.js",
  "jsnext:main": "nginfinite-scroll.module.js",
  "module": "nginfinite-scroll.module.js",
  "types": "nginfinite-scroll.module.d.ts",
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*.spec.ts --recursive",
    "test:watch": "mocha -w --require ts-node/register test/**/*.spec.ts --recursive",
    "build": "rimraf dist && ts-node tools/inline-styles.ts && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/nginfinite-scroll.module.js > dist/nginfinite-scroll.bundle.js && cp package.json dist && ts-node tools/cleanup.ts && ngc && cp README.md dist",
    "build:demo": "rimraf demo/dist && tsc -p tsconfig-demo.json",
    "lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toniantunovi/nginfinite-scroll.git"
  },
  "keywords": [
    "angular",
    "infinite",
    "scroll"
  ],
  "author": "Toni Antunovic <toniantunovic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toniantunovi/nginfinite-scroll/issues"
  },
  "homepage": "https://github.com/toniantunovic/nginfinite-scroll#readme",
  "peerDependencies": {
    "@angular/core": ">=4.0.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.37",
    "@types/node": "^7.0.0",
    "chai": "^3.5.0",
    "codelyzer": "^2.0.0-beta.4",
    "core-js": "^2.4.1",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.3.0",
    "systemjs": "0.19.28",
    "ts-helpers": "^1.1.2",
    "ts-node": "^2.0.0",
    "tslib": "^1.5.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5",
    "uglifyjs": "^2.4.10",
    "zone.js": "^0.8.4"
  }
}
